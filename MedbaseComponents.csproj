<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
	  <UseMauiEssentials>true</UseMauiEssentials>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
	  <PackageId>MedbaseComponents</PackageId>
	  <Version>1.0.2</Version>
	  <Author>Tanaka Mawere</Author>
	  <Product>Medbase</Product>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Markdig" Version="0.35.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.3" />
		<PackageReference Include="MudBlazor" Version="6.6.0" />
		<PackageReference Include="MudBlazor.Markdown" Version="0.1.1" />
	</ItemGroup>
	<ItemGroup>
		<None Include="readme.md" Pack="true" PackagePath="." />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\MedbaseLibrary\MedbaseLibrary.csproj" />
	</ItemGroup>
	<ItemGroup>
	  <Content Update="wwwroot\css\common.css">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>



</Project>
