<MudDialog Class="m-2">
    <DialogContent>
        <div class="container my-5">
            <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
                <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
                    <MudText Typo="Typo.h3" Class="fw-bold">
                        Welcome to Medbase
                    </MudText>
                    <br/>
                    <br/>
                    <MudText Typo="Typo.h6">
                        As a sign up gift, we have a new feature and <strong>you</strong> are a part of it.
                        <br/>
                        You can use <strong>Medbase AI</strong> and many more!
                    </MudText>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                        <MudButton Variant="Variant.Filled" OnClick="CloseDialog" StartIcon="@Icons.Material.Filled.EmojiEmotions" Color="Color.Primary">Get Started</MudButton>
                    </div>
                </div>
                <div class="col-lg-4 offset-lg-1 m-5">
                    <img class="img-fluid bg-transparent h-100" src="img/medbase_premium_banner.png" style="max-height:300px;">
                </div>
            </div>
        </div>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    //Close dialog
    protected void CloseDialog()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
}
